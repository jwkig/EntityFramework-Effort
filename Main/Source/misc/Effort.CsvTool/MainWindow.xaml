<Window x:Class="Effort.CsvTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Exporter" Height="438.375" Width="525"
        
        xmlns:vm="clr-namespace:Effort.CsvTool.ViewModels" 
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
   

    <Grid>
        <Grid Margin="12,12,12,84" Name="grid1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Provider:" Grid.Row="0" Grid.Column="0" />
            <ComboBox Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" ItemsSource="{Binding Providers}" SelectedItem="{Binding SelectedProvider}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="Export path:" Grid.Row="5" Grid.Column="0" />
            <TextBox Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=ExportPath}" />
            
            <xtk:PropertyGrid 
                Grid.Row="2"
                Grid.ColumnSpan="3"
                SelectedObject="{Binding 
                    ElementName=grid1, 
                    Path=DataContext.ConnectionStringBuilder}" 
                IsCategorized="True" FlowDirection="LeftToRight" ShowTitle="False" />
        </Grid>
        <Button Content="Export" Margin="0,0,12,12" HorizontalAlignment="Right" Width="91" Height="59" VerticalAlignment="Bottom" Command="{Binding Path=ExportCommand}" />
        <ProgressBar Margin="12,0,110,48" Name="progressBar1" Height="23" VerticalAlignment="Bottom" Value="{Binding Path=ReportProgress}" />
        <Label Name="StatusText" Height="26" VerticalAlignment="Bottom" Content="{Binding Path=StatusText}" Margin="14,0,108,20" />
    </Grid>
</Window>
